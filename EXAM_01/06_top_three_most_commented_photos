SELECT
	p.id AS photo_id,
	p.capture_date,
	p.description,
	COUNT(c.id) AS comments_count
	
FROM
	photos as p
JOIN
	comments as c
	
ON p.id = c.photo_id

WHERE p.description IS NOT NULL

GROUP BY p.id, p.capture_date, p.description

HAVING COUNT(c.id) > 0

ORDER BY comments_count DESC, photo_id ASC
LIMIT 3;
	